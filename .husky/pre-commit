if ! echo "$branch_name" | grep -Eq '^(main|dev|develop|[a-z]{2}-(fix|feat|chore|add)-POKE-[0-9]+-[a-z0-9-]+)$'; then
  echo "âŒ Invalid branch name: $branch_name"
  echo "âœ… Allowed: main, dev, develop, or xx-type-POKE-1234-description"
